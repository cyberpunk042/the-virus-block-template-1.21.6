{
    "targets": {
        "swap": {},
        "mask": {}
    },
    "passes": [
        {
            "comment": "Pass 1: Read the mask texture (generated by CPU) and scene, then apply glow",
            "vertex_shader": "minecraft:post/sobel",
            "fragment_shader": "the-virus-block:post/shockwave_glow",
            "inputs": [
                {
                    "sampler_name": "In",
                    "target": "minecraft:main"
                },
                {
                    "sampler_name": "Mask",
                    "target": "mask"
                }
            ],
            "output": "swap"
        },
        {
            "comment": "Pass 2: Blit result back to main",
            "vertex_shader": "minecraft:post/blit",
            "fragment_shader": "minecraft:post/blit",
            "inputs": [
                {
                    "sampler_name": "In",
                    "target": "swap"
                }
            ],
            "uniforms": {
                "BlitConfig": [
                    {
                        "name": "ColorModulate",
                        "type": "vec4",
                        "value": [
                            1,
                            1,
                            1,
                            1
                        ]
                    }
                ]
            },
            "output": "minecraft:main"
        }
    ]
}